	<groupId>com.splendiddata</groupId>
	<artifactId>pg_sqlparser</artifactId>
	<version>15.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>pg_sqlparser</name>
	<description>Java implementation of the Postgres sql parser. This version of the sqlparser is generated from the Postgres version 15 parser.</description>
	<inceptionYear>2020</inceptionYear>

	<organization>
		<name>Splendid Data Product Development B.V.</name>
		<url>http://www.splendiddata.com</url>
	</organization>

	<licenses>
		<license>
			<name>GNU General Public License v3.0</name>
			<url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:https://github.com/splendiddata/pg_sqlparser.git</connection>
		<developerConnection>scm:git:https://github.com/splendiddata/pg_sqlparser.git</developerConnection>
		<url>https://github.com/splendiddata/pg_sqlparser</url>
	</scm>

	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/splendiddata/pg_sqlparser/issues</url>
	</issueManagement>

	<properties>
		<java.version>11</java.version>
		<maven.compiler.source>${java.version}</maven.compiler.source>
		<maven.compiler.target>${java.version}</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<sonar.exclusions>file:**/generated-sources/**</sonar.exclusions>
		<log4j.version>2.19.0</log4j.version>
		<javafx.version>11.0.2</javafx.version>
		<jupiter.version>5.9.1</jupiter.version>
		<p6spy.version>3.9.1</p6spy.version>
		<jvx.version>2.8</jvx.version>
	</properties>

	<modules>
		<module>parser-enums</module>
		<module>grammar-to-java</module>
		<module>parser</module>
		<module>parser-test-gui</module>
	</modules>

